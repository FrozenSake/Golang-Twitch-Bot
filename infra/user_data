Content-Type: text/x-shellscript; charset="us-ascii"
MIME-Version: 1.0
Content-Transfer-Encoding: 7bit
Content-Disposition: attachment; filename="userdata.txt"

#!/bin/bash
echo "${env}" >> /home/ubuntu/ENV
echo "${region}" >> /home/ubuntu/AWS_REGION
echo "${service}" >> /home/ubuntu/SVCNAME
TOKEN=`curl -X PUT "http://169.254.169.254/latest/api/token" -H "X-aws-ec2-metadata-token-ttl-seconds: 21600"` \
&& curl -H "X-aws-ec2-metadata-token: $TOKEN" -v http://169.254.169.254/latest/meta-data/iam/security-credentials/${role} >> /home/ubuntu/CREDS
sudo snap install docker
sudo apt install -y jq
sudo docker build https://github.com/FrozenSake/Golang-Twitch-Bot.git --tag frozensake/twitchbot/runner
sudo docker run -d -e "ENV='$(cat /home/ubuntu/ENV)'" -e "AWS_REGION=''$(cat /home/ubuntu/AWS_REGION)" -e "SVCNAME='$(cat /home/ubuntu/SVCNAME)'" -e "AWS_ACCESS_KEY_ID='$(jq -r .AccessKeyId /home/ubuntu/CREDS)'" -e "AWS_SECRET_ACCESS_KEY='$(jq -r .SecretAccessKey /home/ubuntu/CREDS)'" --name chatbot frozensake/twitchbot/runner

--//